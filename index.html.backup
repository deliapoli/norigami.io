            .menu-item {
                padding: 10px;
                gap: 10px;
            }
            
            .menu-item-image {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }
            
            .menu-item .name {
                font-size: 1rem;
            }
            
            .menu-item .price {
                font-size: 1rem;
            }
            
            .sushi-grid th,
            .sushi-grid td {
                padding: 4px 3px;
                font-size: 0.65rem;
            }
            
            .sushi-grid th {
                font-size: 0.7rem;
                padding: 6px 3px;
            }
            
            .sushi-grid .price {
                font-size: 0.7rem;
            }
        }

        /* Desktop - Keep original nice look */
        @media (min-width: 768px) {
            body {
                padding-bottom: 0;
            }

            .container {
                max-width: 1200px;
                padding: 20px;
            }

            .hero {
                padding: 50px 30px;
            }

            .logo {
                max-width: 300px;
            }

            .hero h1 {
                font-size: 3.5rem;
            }

            .hero .tagline {
                font-size: 1.3rem;
            }

            nav {
                overflow-x: visible;
            }

            nav ul {
                flex-wrap: wrap;
                justify-content: center;
            }

            .menu-section {
                padding: 30px;
            }

            .menu-section h2 {
                font-size: 2rem;
            }

            .menu-item {
                padding: 20px;
            }

            .menu-item-image {
                width: 120px;
                height: 120px;
            }

            .category-image {
                height: 250px;
            }

            .contact-info {
                grid-template-columns: repeat(3, 1fr);
            }
        }
</head>
